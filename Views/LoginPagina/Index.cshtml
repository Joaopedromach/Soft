@{
    Layout = "_LayoutDeslogada";
}

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<p>

    <style>
        .span_error {
            display: none;
        }
    </style>
    
    <form>
        <div class="form-group">
            <label for="exampleInputUsuario" class="label_user">Usuario</label>
            <input required type="text" class="form-control" id="Usuario" aria-describedby="Usuario" placeholder="Usuario">
    

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" class="label_password">Senha</label>
            <input required type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha">
            
        </div>
        <p class="span_error"></p>
        <br />
      

        <button class="btn btn-primary" id="btn_entrar" asp-controller="Produtos" asp-action="Index" asp-route-id="">Entrar</button>

      
    </form>

    <script>
        const btnSubmit = document.getElementById("btn_entrar");
        function handleSubmit() {
            const userInpt = document.getElementById("Usuario").value;
            const passwordInpt = document.getElementById("exampleInputPassword1").value;
            const userLabel = document.querySelector(".label_user")
            const passwordlabel = document.querySelector(".label_password")

            if(userInpt == "" || passwordInpt == "") {
                const paragraphError = document.querySelector(".span_error")
            
                if(userInpt == "" && !(passwordInpt == "")) {
                    userLabel.style.color = "red";
                    paragraphError.style.display = "block"
                    paragraphError.innerHTML = "Preencha o campo usuario."
                    
                } else {
                    userLabel.style.color = "black"
                    paragraphError.style.display = "none"
                }

                if(passwordInpt == "" && !(userInpt == "")) {
                    passwordlabel.style.color = "red";
                    paragraphError.style.display = "block"
                    paragraphError.innerHTML = "Preencha o campo senha."
                    
                } else {
                    passwordlabel.style.color = "black"
                    paragraphError.style.display = "none"
                }
            }
        }

        btnSubmit.addEventListener("click", handleSubmit)
    </script>
